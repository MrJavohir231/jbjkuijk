  <script>
    const orderList = document.getElementById('orderList');
    let orders = JSON.parse(localStorage.getItem('orders')) || [];

    function renderOrders() {
      orderList.innerHTML = '';
      if (orders.length === 0) {
        orderList.innerHTML = '<p>Hozircha buyurtmalar yo‚Äòq üòå</p>';
        return;
      }
      orders.forEach(o => {
        const div = document.createElement('div');
        div.classList.add('order-item');
        div.innerHTML = `
          <b>${o.name}</b> ‚Äî ${o.price.toLocaleString()} so'm <br>
          ‚è∞ ${o.time} daqiqa | üìÖ ${o.date}
        `;
        orderList.appendChild(div);
      });
    }

    renderOrders();

    function selectService(name, price, time) {
      const date = new Date().toLocaleDateString() + ' ' + new Date().toLocaleTimeString();
      const order = { name, price, time, date };
      orders.push(order);
      localStorage.setItem('orders', JSON.stringify(orders));
      renderOrders();
      alert(`‚úÖ ${name} xizmati tanlandi!`);
    }
  </script>
