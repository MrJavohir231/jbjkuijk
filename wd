  <button onclick="tolovQil()">To‚Äòlovni amalga oshirish</button>

  <div id="xabar"></div>

  <script>
    const umumiyNarx = localStorage.getItem('umumiyNarx') || 0;
    document.getElementById('narx').textContent = 'Umumiy to‚Äòlov summasi: ' + Number(umumiyNarx).toLocaleString('uz-UZ') + ' so‚Äòm';

    function tolovQil() {
      const karta = document.getElementById('karta').value;
      if (karta.length >= 8) {
        document.getElementById('xabar').textContent = '‚úÖ Zakaz berildi! Rahmat!';
        localStorage.removeItem('umumiyNarx');
      } else {
        alert('‚ùå Iltimos, plastik raqamni to‚Äòliq kiriting!');
      }
    }
  </script>

