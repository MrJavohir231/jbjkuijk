<body>
  <h1>üíà Barber Zakaz</h1>

  <form id="orderForm">
    <input type="text" id="name" placeholder="Ismingiz" required>
    <select id="service" required>
      <option value="">Xizmatni tanlang</option>
      <option value="Soch olish">Soch olish ‚Äî 30 min ‚Äî 50 000 so‚Äòm</option>
      <option value="Soqol olish">Soqol olish ‚Äî 15 min ‚Äî 30 000 so‚Äòm</option>
      <option value="Soch + soqol">Soch + Soqol ‚Äî 45 min ‚Äî 70 000 so‚Äòm</option>
    </select>
    <input type="time" id="time" required>
    <button type="submit">Buyurtma berish</button>
  </form>

  <div id="orders">
    <h3>üßæ Buyurtmalar ro‚Äòyxati</h3>
    <div id="orderList"></div>
  </div>

  <script>
    const form = document.getElementById('orderForm');
    const orderList = document.getElementById('orderList');

    // Local Storage'dan yuklash
    let orders = JSON.parse(localStorage.getItem('orders')) || [];

    // Saqlangan buyurtmalarni chiqarish
    function renderOrders() {
      orderList.innerHTML = '';
      if (orders.length === 0) {
        orderList.innerHTML = '<p>Hozircha buyurtmalar yo‚Äòq üòå</p>';
        return;
      }

      orders.forEach((o) => {
        const div = document.createElement('div');
        div.classList.add('order-item');
        div.innerHTML = `
          <b>${o.name}</b> ‚Äî ${o.service} <br>
          ‚è∞ ${o.time} | üí∞ ${o.price} so‚Äòm | üìÖ ${o.date}
        `;
        orderList.appendChild(div);
      });
    }

    renderOrders();

    // Xizmat narxini aniqlash
    function getPrice(service) {
      if (service.includes("Soch + Soqol")) return 70000;
      if (service.includes("Soch olish")) return 50000;
      if (service.includes("Soqol")) return 30000;
      return 0;
    }

    // Buyurtma berilganda
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const service = document.getElementById('service').value;
      const time = document.getElementById('time').value;
      const price = getPrice(service);
      const date = new Date().toLocaleDateString() + ' ' + new Date().toLocaleTimeString();

      const order = { name, service, time, price, date };
      orders.push(order);
      localStorage.setItem('orders', JSON.stringify(orders));

      renderOrders();
      form.reset();

      alert('‚úÖ Buyurtma qabul qilindi!');
    });
  </script>
</body>
</html>


